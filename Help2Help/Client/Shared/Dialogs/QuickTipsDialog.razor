                                    <MudHidden Breakpoint="Breakpoint.SmAndUp" Invert="true">
                                        <MudImage Src="../images/gear.png"
                                              Alt="Mapa"
                                              Style="height:30vh" />
                                    </MudHidden>
                                </MudStack>
                            </MudHidden>
                        </div>
                    </MudCarouselItem>
                </MudCarousel>
                <MudCheckBox @bind-Checked="@Label_CheckBox1" Class="mt-0 pt-0" Label="No volver a mostrar" Color="Color.Primary"></MudCheckBox>
            }
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Class="mr-auto" OnClick="Ok">Aceptar</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        Loading = true;
        Loading = false;
    }

    private bool Loading = false;
    public bool Label_CheckBox1 { get; set; } = false;

    private async Task Ok()
    {
        if (Label_CheckBox1) await UserService.NotShowGuide();
        MudDialog.Close(DialogResult.Ok(true));
    }
}