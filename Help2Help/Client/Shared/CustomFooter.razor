            <MudPaper Class="pa-3" Elevation="0">
                <MudImage Src="../images/LogoSinFondo.png"
                          Color="@Color.Primary"
                          Alt="Help2Help"
                          style="height:40px"/>
                <MudPaper Class="pa-1" Elevation="0">
                    <MudText Typo="Typo.caption">Copyright Help2Help – Todos los derechos reservados</MudText>
                    <MudHidden Breakpoint="Breakpoint.MdAndUp" Invert="true">
                        <MudStack Row="true" Spacing="0">
                            <MudPaper Class="pa-3" Elevation="0"><MudNavLink Href="#" Icon="@Icons.Custom.Brands.Facebook" Title="Facebook" /></MudPaper>
                            <MudPaper Class="pa-3" Elevation="0"><MudNavLink Href="#" Icon="@Icons.Custom.Brands.Instagram" Title="Instagram" /></MudPaper>
