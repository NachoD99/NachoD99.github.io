                        </MudStack>
                    </MudHidden>
                    <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
                        <MudStack Row="true" Spacing="0">
                            <MudPaper Class="pa-3" Elevation="0">
                                <MudNavLink Href="#">
                                    <MudIcon Icon="@Icons.Custom.Brands.Facebook" Title="Facebook" Size="Size.Small" />
                                </MudNavLink>
                            </MudPaper>
                            <MudPaper Class="pa-3" Elevation="0">
                                <MudNavLink Href="#">
                                    <MudIcon Icon="@Icons.Custom.Brands.Instagram" Title="Instagram" Size="Size.Small" />
                                </MudNavLink>
                            </MudPaper>
                            <MudPaper Class="pa-3" Elevation="0">
                                <MudNavLink Href="#">
                                    <MudIcon Icon="@Icons.Custom.Brands.LinkedIn" Title="LinkedIn" Size="Size.Small" />
                                </MudNavLink>
                            </MudPaper>
                        </MudStack>
                    </MudHidden>
                   @* <MudNavLink Href="#" Style="margin-left: auto;">
                        <MudIcon Icon="@Icons.Filled.InstallMobile" Title="DescargaApp" /> Descargá la App
                    </MudNavLink>
*@                </MudPaper>
            </MudPaper>
            <MudPaper Elevation="0">
                <MudNavLink Href="#">¿Quienes Somos?</MudNavLink>
                <MudNavLink Href="#">¿Cómo Donar?</MudNavLink>
                <MudNavLink Href="#">¿Quienes Nos Ayudan?</MudNavLink>
            </MudPaper>
        </MudStack>

        <MudStack Row="true" Spacing="0">
            <MudPaper Elevation="0">
                <MudNavLink Href="#">Terminos y Condiciones</MudNavLink>
            </MudPaper>
            <MudPaper Elevation="0">
                <MudNavLink Href="#">Política de privacidad y datos personales </MudNavLink>
            </MudPaper>
        </MudStack>
    </MudPaper>
</MudStack>



