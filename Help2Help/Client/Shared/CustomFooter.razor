<MudStack Class="object-bottom" Spacing="0" AlignItems="AlignItems.Center" Style="@($"border-style:none;")">
    <MudPaper Style="@($"color:{Colors.Shades.Black}; background:{Colors.Shades.White};")" Elevation="0">
