            </MudPaper>
            <MudPaper Class="mx-auto pa-2" Elevation="0" Height="40vh">

                <MudStack Row="true" Spacing="2" Justify="Justify.Center" AlignItems="AlignItems.Center" Style=" Height: 40vh">

                    <MudPaper Height="32vh" Class="pa-2" Outlined="true" Width="30vw" Elevation="2">
                        <MudText Typo="Typo.subtitle2" Align="Align.Center">LINK DE PAGO</MudText>
