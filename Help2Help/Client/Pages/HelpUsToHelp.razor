                    <MudPaper Elevation="0" Class="mx-auto justify-center object-center">
                        <MudImage Src="../images/AyudanosAAyudar.png"
                                  Alt="Help2Help"
                                  Style="height:70vh"
                                  ObjectFit="ObjectFit.Cover"
                                  ObjectPosition="ObjectPosition.Center"
                                  Class="mx-auto pa-4" />
                    </MudPaper>
                </MudStack>
            </MudPaper>
            <MudPaper Class="px-8 pt-4" Elevation="0">
